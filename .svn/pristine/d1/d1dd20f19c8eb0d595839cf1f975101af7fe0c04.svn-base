    public void sendMsg(String msg) {
    	Set<Entry<String, WebSocketTest>> set=socketMap.entrySet();
        for (Entry<String, WebSocketTest> entry:set){
        	try {
				entry.getValue().sendMessage(msg);
			} catch (Exception e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
        }
    }


